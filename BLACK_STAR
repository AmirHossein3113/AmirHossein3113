<script>
  // بارگذاری تعداد لایک و دیس لایک از localStorage
  document.querySelectorAll('.review').forEach(review => {
    const id = review.getAttribute('data-id');
    const likes = localStorage.getItem('review_like_' + id);
    const dislikes = localStorage.getItem('review_dislike_' + id);
    if(likes) review.querySelector('.like-count').textContent = likes;
    if(dislikes) review.querySelector('.dislike-count').textContent = dislikes;

    // حالت کلیک شده (برای جلوگیری از چندبار کلیک)
    if(localStorage.getItem('review_liked_' + id)) {
      review.querySelector('.like-btn').style.color = '#00ff1a'; // سبز
    }
    if(localStorage.getItem('review_disliked_' + id)) {
      review.querySelector('.dislike-btn').style.color = '#ff0000'; // قرمز
    }
  });

  document.querySelectorAll('.like-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const review = btn.closest('.review');
      const id = review.getAttribute('data-id');
      if(localStorage.getItem('review_liked_' + id)) return; // قبلا لایک شده
      if(localStorage.getItem('review_disliked_' + id)) {
        // اگر قبلا مخالف داده شده بود، کم کردن اون و اضافه کردن لایک
        localStorage.removeItem('review_disliked_' + id);
        const dislikeCountSpan = review.querySelector('.dislike-count');
        let dislikeCount = parseInt(dislikeCountSpan.textContent);
        dislikeCount = Math.max(0, dislikeCount - 1);
        dislikeCountSpan.textContent = dislikeCount;
        localStorage.setItem('review_dislike_' + id, dislikeCount);
        review.querySelector('.dislike-btn').style.color = '#888';
      }
      // اضافه کردن لایک
      const likeCountSpan = review.querySelector('.like-count');
      let likeCount = parseInt(likeCountSpan.textContent);
      likeCount++;
      likeCountSpan.textContent = likeCount;
      localStorage.setItem('review_like_' + id, likeCount);
      localStorage.setItem('review_liked_' + id, 'true');
      btn.style.color = '#28a745'; // سبز
    });
  });

  document.querySelectorAll('.dislike-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const review = btn.closest('.review');
      const id = review.getAttribute('data-id');
      if(localStorage.getItem('review_disliked_' + id)) return; // قبلا مخالف شده
      if(localStorage.getItem('review_liked_' + id)) {
        // اگر قبلا لایک داده شده بود، کم کردن اون و اضافه کردن مخالف
        localStorage.removeItem('review_liked_' + id);
        const likeCountSpan = review.querySelector('.like-count');
        let likeCount = parseInt(likeCountSpan.textContent);
        likeCount = Math.max(0, likeCount - 1);
        likeCountSpan.textContent = likeCount;
        localStorage.setItem('review_like_' + id, likeCount);
        review.querySelector('.like-btn').style.color = '#888';
      }
      // اضافه کردن مخالف
      const dislikeCountSpan = review.querySelector('.dislike-count');
      let dislikeCount = parseInt(dislikeCountSpan.textContent);
      dislikeCount++;
      dislikeCountSpan.textContent = dislikeCount;
      localStorage.setItem('review_dislike_' + id, dislikeCount);
      localStorage.setItem('review_disliked_' + id, 'true');
      btn.style.color = '#dc3545'; // قرمز
    });
  });
</script>
