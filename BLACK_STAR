<script>
  const responses = {
    "سلام": ["سلام دوست من! چطور کمکت کنم؟ 😊", "درود! چه کمکی می‌خوای؟"],
    "خوبی": ["ممنون! شما چطوری؟", "خیلی خوبم، امیدوارم شما هم خوب باشی!"],
    "تبلیغات": ["ما خدمات تبلیغاتی حرفه‌ای داریم. بخش تبلیغات سایت رو ببین.", "برای دیدن تبلیغات کلیک کن روی بخش 'تبلیغات' بالای صفحه."],
    "سایت": ["ما یک سایت خدمات طراحی و تبلیغات هستیم.", "سایت ما برای کمک به کسب‌وکارهای آنلاین ساخته شده."],
    "تماس": ["می‌تونی از تلگرام یا اینستاگرام با ما در تماس باشی.", "راه‌های تماس پایین همین صفحه هست."],
    "درباره": ["ما تیمی از طراحان و متخصصین تبلیغات هستیم.", "در بخش درباره ما اطلاعات بیشتری هست."],
    "کجا": ["دفتر ما به صورت آنلاین فعاله. فعلاً مکان فیزیکی نداریم.", "فعلاً فقط خدمات آنلاین ارائه می‌دیم."],
    "چرا تبلیغات": ["تبلیغات باعث افزایش فروش و دیده شدن کسب‌وکار شما می‌شود!", "بدون تبلیغات، دیده نمی‌شوید! تبلیغات راز موفقیت برندهاست."],
    "خداحافظ": ["خدانگهدار! هر وقت خواستی من اینجام 😊", "بدرود! به امید دیدار دوباره."],
    "تبلیغات این سایت چطوره": ["تبلیغات این سایت عالی و کاربردی هست", "عالیه. صد در صد باعث پیشرفت تبلیغاتی شما میشه"],
    "مورد اعتماد هستید": ["صد در صد . شما میتوانید به صفحه های مجازی ما بروید و اطلاعات بیشتری کسب کنید  یا به بخش نظرات ما بروید و نظرات دیگران را ببنید."]
  };

  const badWords = ["لعنتی", "بد", "احمق", "چرت","بی شعور"]; // کلمات نامناسب

  function toggleChat() {
    const box = document.getElementById('chatBox');
    box.style.display = box.style.display === 'none' ? 'block' : 'none';
  }

  function sendMessage() {
    const input = document.getElementById('userInput');
    let msg = input.value.trim();
    if (!msg) return;

    addMessage("You", msg);
    input.value = '';

    // فیلتر کلمات بد
    if(badWords.some(word => msg.includes(word))){
      setTimeout(() => addMessage("راهنما", "لطفاً محترمانه صحبت کنید."), 500);
      return;
    }

    // پاسخ‌دهی
    let reply = "متوجه نشدم! لطفا سوالت رو واضح‌تر بپرس 😊";

    Object.keys(responses).forEach(key => {
      if (msg.includes(key)) {
        const possibleReplies = responses[key];
        reply = possibleReplies[Math.floor(Math.random() * possibleReplies.length)];
      }
    });

    setTimeout(() => addMessage("Guide", reply), 500);
  }

  function addMessage(sender, text) {
    const msgDiv = document.createElement('div');
    msgDiv.style.margin = "5px 0";
    msgDiv.style.opacity = 0;
    msgDiv.innerHTML = `<strong>${sender}:</strong> ${text}`;
    document.getElementById('chatMessages').appendChild(msgDiv);
    
    // Fade In
    setTimeout(() => { msgDiv.style.opacity = 1; msgDiv.style.transition = "opacity 0.5s"; }, 50);
    
    // Scroll to bottom
    const chatMessages = document.getElementById('chatMessages');
    chatMessages.scrollTop = chatMessages.scrollHeight;
  }
</script>
